<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventyApp.Views.InboxView"
             NavigationPage.HasNavigationBar="False"
             xmlns:tabs="http://sharpnado.com">
  <ContentView.Content>
        <StackLayout Spacing="15" BackgroundColor="White">
            <Label Margin="20,20,0,0" Style="{StaticResource labelStyle}" FontSize="31" FontAttributes="Bold" Text="Inbox"/>
            <BoxView Margin="20,20,20,0" HorizontalOptions="FillAndExpand" HeightRequest="0.5" Color="Gray"/>
            <Label Margin="20,20,0,0" Style="{StaticResource labelStyle}" FontSize="20" FontAttributes="Bold" Text="No saves yet"/>
            <Button  Margin="20,20,250,0"
                     HeightRequest="40" 
                     WidthRequest="50" 
                     CornerRadius="5"                     
                     TextColor="Black" 
                     FontAttributes="Bold"
                     Text="Start exploring"
                     FontSize="16"
                     BackgroundColor="White"
                     BorderColor="Black"
                     BorderWidth="1"
                     Command="{Binding ExploreCommand}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>